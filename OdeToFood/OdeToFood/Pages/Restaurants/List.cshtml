@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurant list";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i>Search</i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class = "table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-default"
                    asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <i>Details</i>
                </a>
            </td>
            <td>
                <a class="btn btn-default"
                    asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <i>Edit</i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page = "./Edit" class="btn btn-primary">
    <i>Add new restaurant</i>
</a>

<div>@Model.Message</div>
